    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-color: #f0f8ff;
        }
        /* Navbar */
        .navbar {
            background-color: #004d40;
            overflow: hidden;
            display: flex;
            justify-content: space-around;
            padding: 15px 0;
        }
        .navbar a {
            color: white;
            text-decoration: none;
            padding: 14px 20px;
            font-size: 18px;
            transition: 0.3s;
        }
        .navbar a:hover {
            background-color: #00796b;
            border-radius: 5px;
        }
        /* Header */
        .header {
            background-color: #e0f2f1;
            text-align: center;
            padding: 50px;
            font-size: 24px;
            color: #004d40;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        /* Welcome Message */
        .welcome-message {
            text-align: center;
            font-size: 26px;
            font-weight: bold;
            color: #00796b;
            padding: 20px;
            background-color: #e0f2f1;
            margin: 20px auto;
            width: 80%;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }
        /* Slider Section */
        .slider-container {
            width: 100vw;
            margin: 0 auto;
            overflow: hidden;
            position: relative;
            height: 500px;
        }
        .slider {
            display: flex;
            width: 300vw; 
            animation: slide 12s infinite;
            position: relative;
        }
        .slide {
            width: 100vw;
            flex: none;
        }
        .slide img {
            width: 100%;
            height: 500px;
            object-fit: cover;
        }
        @keyframes slide {
            0%, 33% { transform: translateX(0); } 
            34%, 66% { transform: translateX(-100vw); } 
            67%, 100% { transform: translateX(-200vw); } 
        }
        /* Book Appointment Button Positioned Over Slider */
        .appointment-container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 10;
            text-align: center;
        }
        .appointment-btn {
            display: inline-block;
            padding: 15px 30px;
            background-color: #00796b;
            color: white;
            font-size: 22px;
            text-decoration: none;
            border-radius: 8px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
            transition: 0.3s;
        }
        .appointment-btn:hover {
            background-color: #004d40;
            transform: scale(1.05);
        }
        /* Nearby Hospitals Section */
        .nearby-hospitals {
            text-align: center;
            padding: 40px 20px;
            background-color: #f0f8ff;
        }
        .nearby-hospitals h2 {
            font-size: 28px;
            color: #004d40;
            margin-bottom: 20px;
        }
        .map-container {
            width: 80%;
            margin: auto;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }
        .map-container iframe {
            width: 100%;
            height: 400px;
            border: 0;
        }

        /* Emergency Booking Section */
        .emergency-booking {
            text-align: center;
            padding: 40px 20px;
            background-color: #ffebee;
            background: url('typ.avif') no-repeat center center/cover;
            margin: 20px auto;
            width: 80%;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            height:250px;
        }
        .emergency-booking h2 {
            font-size: 40px;
            color: #ffffff;
          

        }
        .emergency-booking p {
            font-size: 25px;
            color: #f8f4f4;
            margin-bottom: 20px;
        }
        .emergency-btn {
            display: inline-block;
            padding: 15px 30px;
            background-color: #d32f2f;
            color: white;
            font-size: 20px;
            text-decoration: none;
            border-radius: 8px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
            transition: 0.3s;
        }
        .emergency-btn:hover {
            background-color: #3d0c0c;
            transform: scale(1.05);
        }
        /* Footer */
